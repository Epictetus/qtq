<div class='each-comment-box' id=<%= 'comment' "#{comment.id}" %>>
  <div class='comment-header flex'>
    <%= image_tag user_avatar_or_default(current_user), class: 'comment-user-image' %>
    <div class='comment-user-info'>
      <div class='comment-user-name-box'>
        <%= link_to user_path(current_user), class: 'comment-user-name' do %>
          <%= current_user.name %>
        <% end %>
      </div>
      <div class='comment-user-learning-num'>
        <%= current_user.learnings.count %><span class='comment-user-leanring-unit'>learnings</span>
      </div>
    </div>
    <div class='comment-time-box'>
      <div class='comment-time'>
        <%= current_user.created_at.strftime('%Y-%m-%d %H:%M') %>
      </div>
      <div class='comment-contribution'>
        <% if comment.user_id == current_user.id %>
          <span>1</span>
          <span class='comment-contribution-unit'>いいね</span>
          <span class='comment-edit-modal-button'>編集</span>
          <%= link_to '削除', comment, class: 'comment-delete-button', method: :delete, remote: true, data: {confirm: '本当に削除しますか？'} %>
        <% else %>
          いいね：3
        <% end %>
      </div>
    </div>
  </div>
  <div class='comment-body'>
    <div class='comment-body-inner'>
      <%= simple_format(markdown(comment.body).html_safe) %>
    </div>
  </div>
</div>
