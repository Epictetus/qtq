<div class="navbar navbar-default root-header-nav">
<div class='root-header-mask'>
  <div class='header-inner-box'>
    <div class='common-header '>
      <ul class="nav white navbar-nav">
        <li><a href="/" class='p0'><%= image_tag "logo-white.png", class: 'header-logo' %></a></li>


      <li>
        <button class="header-left-menu-button" id="demo-menu-lower-left">
          <span class="caret header-left-menu-caret"></span>
        </button>
        <ul class="mdl-menu mdl-js-menu mdl-menu--bottom-left mdl-js-ripple-effect p0" id='header-left-dropdown' style='border: solid 1px #169ae2' for="demo-menu-lower-left">
            <li class='mdl-menu__item header-left-menu-list header-left-menu-list-bell'>
              <%= fa_icon 'bell', class: 'blue-black' %>
              <%= link_to 'タイムライン', timeline_learnings_path %>
            </li>
            <li class='mdl-menu__item header-left-menu-list'>
              <%= fa_icon 'circle', class: 'blue-black' %>
              <%= link_to 'ユーザー一覧', users_path %>
            </li>
            <li class='mdl-menu__item header-left-menu-list'>
              <%= fa_icon 'asterisk', class: 'blue-black' %>
              <%= link_to 'QtQについて', learning_path(1) %>
            </li>
        </ul>
      </li>
      <li>
        <%= form_tag(search_learnings_path, method: "get", class: 'learning-search-form') do %>
          <span class="fa fa-search learning-search-submit"></span>
          <%= text_field_tag :word, '', class: 'learning-search-field', placeholder: '学習検索...' %>
        <% end %>
      </li>



      </ul>
      <ul class="pull-right header-link-list header-login-ul">
        <li><%= link_to 'ログイン', login_path, style: 'margin-right:10px;' %></li>
      </ul>
      <ul class="pull-right header-link-list header-login-ul">
      <li><%= link_to 'ユーザー登録', new_user_path, class: 'header-link-new-user' %></li>
      </ul>
    </div>
    <div class='root-header-downer clearfix'>
      <div class='pull-left root-header-downer-left-box'>
        <h1 class='white root-header-downer-title'>Hello hackers !</h1>
        <p class='white'>QtQは、学習を記録・共有するためのサービスです。<br>あなたの学習を定着させましょう ;)</p>
      </div>
      <div class="root-signup-box white">
        <%= link_to "/auth/facebook" do %>
          <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--green root-facebook-button">
            <%= image_tag "facebook-logo.png", class: 'root-facebook-image' %>
            <span class='root-facebook-letter'>Facebook</span>
          </button>
        <% end %>
        <p class='text-center mt10'>or</p>
        <%= form_for(User.new) do |f| %>
          <%= render 'shared/error_messages' %>
          <div class="mdl-textfield mdl-js-textfield">
            <%= f.text_field :name, class: 'mdl-textfield__input', placeholder: 'ユーザーネーム...' %>
            <% f.label :name, class: 'mdl-textfield__label' %>
          </div>
          <div class="mdl-textfield mdl-js-textfield">
            <%= f.email_field :email, class: 'mdl-textfield__input', placeholder: 'メールアドレス...' %>
            <% f.label :email, class: 'mdl-textfield__label' %>
          </div>
          <div class="mdl-textfield mdl-js-textfield">
            <%= f.password_field :password, class: 'mdl-textfield__input root-downer-header-pass', placeholder: 'パスワード...' %>
            <% f.label :password, class: 'mdl-textfield__label' %>
          </div>
          <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--green user-new-button back-white light-blue root-user-new-button" style="margin-bottom: 23px;">
            登録
          </button>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>
