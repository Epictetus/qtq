<div class='each-user-list'>
  <%= image_tag user_avatar_or_default(learning.user), class: "user-list-avatar mr10" %>
  <div class='mr10'>
    <div class='user-list-username'>
      <%= link_to "@#{learning.user.name}", user_path(learning.user.name) %>
      <span> <%= learning.created_at.strftime('%Y/%m/%d') %> </span>
    </div>
    <div class='line-break'>
      <%= link_to learning, class: 'user-list-learning-title line-break' do %>
        <span class='line-break'><%= learning.title.truncate(40) %></span>
      <% end %>
    </div>
  </div>
  <div class='user-list-like-container mla'>
    <%= fa_icon 'thumbs-up', class: 'user-list-like-icon' %>
    <span><%= learning.likes_count || 0 %></span>
  </div>
</div>
