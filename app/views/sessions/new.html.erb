<% provide(:title, "RoootedLearningへのログイン") %>

<div class="link-to-root">
  <%= link_to root_path do %>
    <%= image_tag "logo-black.png" %>
  <% end %>
</div>
<div class="signup-box">
  <h2>ログイン</h2>
  <%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :email, 'メールアドレス' %>
    <%= f.email_field :email, class: "form-control" %>
    <%= f.label :password, 'パスワード', class: "short-label" %>
    <%= f.password_field :password, class: "form-control" %>
    <%= f.submit "サインイン", class: "signup-submit" %>
    <%= f.check_box :remember_me, class: "text-align-left", id: "remember-checkbox" %>
    <%= f.label :ログインしたままにする, class: "font-weight-normal", for: "remember-checkbox" %>
    <div class='mb10'><%= link_to "パスワードを忘れた場合", new_password_reset_path, class: "text-right mt10"%></div>
  <% end %>
  <div class="a-divider"><h5>新規登録はこちら</h5></div>
  <%= link_to "アカウントを作成", new_user_path, class: "link-to-signup" %>
</div>
