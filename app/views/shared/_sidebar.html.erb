<div id="sidebar" class='sidebar'>
  <div class='pb10'>
    <div class='mb10'>
      <%= image_tag user_avatar_or_default(@user), class: 'side-user-image animated pulse' %>
    </div>
    <div class='mb10'>
      <h2 class='side-user-name'>@<%= @user.name %></h2>
      <div class="profile-stats mb10">
        <ul class="">
          <li class="profile-stats-list">
            <a class='profile-stats-link'>
              <span class="profile-stats-span">学習時間</span>
              <span class="profile-stats-span">1,106</span>
            </a>
          </li>
          <li class="profile-stats-list">
            <a class='profile-stats-link'>
              <span class="profile-stats-span">フォロー</span>
              <span class="profile-stats-span"><%= @user.following.count %></span>
            </a>
          </li>
          <li class="profile-stats-list-follower">
            <a class='profile-stats-link'>
              <span class="profile-stats-span">フォロワー</span>
              <span class="profile-stats-span" id='followers'><%= @user.followers.count %></span>
            </a>
          </li>
        </ul>
      </div>
      <% if logged_in? && !current_user?(@user) %>
        <div id="follow_form">
        <% if current_user.following?(@user) %>
          <%= render 'unfollow' %>
        <% else %>
          <%= render 'follow' %>
        <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class='user-learning-index'>
    <% @user.learnings.each do |learning| %>
      <%= link_to learning.title, learning_path(learning) %>
    <% end %>
  </div>
  <%= image_tag 'ex.png' %>
</div>
